/**app.wxss**/
.slider{
  width:100%;
 }
.slider swiper,
.slider image{
  width:100%;
  height:350rpx;
}


/* view 分割线*/
.divider{
  height:20rpx;
  background-color: #f1f1f1;
  box-shadow:0 5rpx 5rpx rgba(0,0,0,.1)inset;
}

 /* 箭头功能 */
 .arrow{
  display:flex;
  justify-content: space-between;
  align-items:center;
}
.arrow::after{
  content:"";
  width:24rpx;
  height:24rpx;
  border-right:2px solid #C3C3C3;
  border-top:2px solid #C3C3C3;
  transform: rotate(45deg);
  margin-right:22rpx;
}
