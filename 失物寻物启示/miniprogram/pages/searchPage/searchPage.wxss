/* miniprogram/pages/searchPage/searchPage.wxss */

.search_header{
    display:flex;
    border-bottom:1rpx solid #DDDDDD;
    justify-content:space-between;
    align-items:center;
    height:128rpx;
    font-size:16px;
 }
 .search_header .search_header_input{
     width:70%;
     margin-left:32rpx;
 }
 .search_header .search_header_input input{
    background:#EEEEEE;
    border-radius:18rpx;
    width:100%;
    height:64rpx;
 }
 .search_header .search_header_button{
     margin-right:24rpx;
 }
 .search_header .search_header_button button{
    height:64rpx;
    line-height:64rpx;
    font-size:16px;
    background:#27C79A;
 
 }

 /*内容列表*/
.list-item{
    display:flex;
    border-bottom:1px solid #E3E5CE;
    padding:12rpx;
  }
  
  .list-item .list-item-image image{
    width:180rpx;
    height:160rpx;
  }
  .list-item .list-item-text{
     display:flex;
     flex-direction: column;
     justify-content:space-around;
     width:75%;
     margin-left:12rpx;
  }
  .list-item .list-item-text .item-text{
     display:flex;
     justify-content:space-between;
     align-items:center;
  }